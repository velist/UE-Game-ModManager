<Window x:Class="UEModManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="用户登录 - UEModManager" Height="620" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#0B1426"
        ResizeMode="NoResize"
        Style="{StaticResource DarkFlatWindow}">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static SystemCommands.MinimizeWindowCommand}" Executed="OnMinimizeWindow" />
        <CommandBinding Command="{x:Static SystemCommands.MaximizeWindowCommand}" Executed="OnMaximizeWindow" />
        <CommandBinding Command="{x:Static SystemCommands.RestoreWindowCommand}" Executed="OnRestoreWindow" />
        <CommandBinding Command="{x:Static SystemCommands.CloseWindowCommand}" Executed="OnCloseWindow" />
    </Window.CommandBindings>
    
    <Window.Resources>
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1A2433"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2A3441"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="InputPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#1A2433"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2A3441"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FBBF24"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FBBF24"/>
            <Setter Property="BorderBrush" Value="#FBBF24"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Logo和标题 + 语言切换按钮 -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <Button x:Name="LangToggleButton" Content="EN" Width="40" Height="24" Background="#1F2937" Foreground="#FBBF24" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,4" Click="LangToggleButton_Click"/>
            <TextBlock Text="🎮 UEModManager"
                       FontSize="24" FontWeight="Bold"
                       Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock x:Name="TitleText"
                       Text="智能登录"
                       FontSize="14" Foreground="#9CA3AF"
                       HorizontalAlignment="Center" Margin="0,5"/>
        </StackPanel>
        <!-- 语言切换按钮（暂不启用事件，后续如需可打开） -->
        <!-- <Button x:Name="LangToggleButton" Content="EN" Width="40" Height="24" Background="#1F2937" Foreground="#FBBF24"
                BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0"
                Click="LangToggleButton_Click" Grid.Row="0"/> -->

        <!-- 智能认证提示 -->
        <StackPanel Grid.Row="2">
            <TextBlock x:Name="SmartAuthHint"
                     Text="💡 输入邮箱后，系统将自动识别是登录还是注册"
                     Foreground="#FBBF24"
                     FontSize="11"
                     Margin="0,0,0,12"
                     TextWrapping="Wrap"
                     HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- 邮箱输入 -->
        <StackPanel Grid.Row="4">
            <TextBlock x:Name="EmailLabel" Text="邮箱地址" Foreground="White" FontSize="12" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox"
                     Style="{StaticResource InputTextBox}"
                     TextChanged="EmailTextBox_TextChanged"/>

            <!-- 智能检测状态 -->
            <TextBlock x:Name="SmartDetectionText"
                     Foreground="#10B981"
                     FontSize="11"
                     Visibility="Collapsed"
                     Margin="5,2,0,0"/>
        </StackPanel>

        <!-- 密码输入区域 -->
        <StackPanel Grid.Row="6">
            <!-- 密码标签区域 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="PasswordLabel"
                         Text="密码"
                         Grid.Column="0"
                         Foreground="White"
                         FontSize="12"
                         Margin="0,0,0,5"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- 密码强度显示 -->
                    <TextBlock x:Name="PasswordStrengthText"
                             Foreground="#4ADE80"
                             FontSize="11"
                             VerticalAlignment="Center"
                             Visibility="Collapsed"/>
                </StackPanel>
            </Grid>

            <!-- 密码输入框 -->
            <Grid>
                <PasswordBox x:Name="PasswordBox"
                           Style="{StaticResource InputPasswordBox}"
                           PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- 明文密码输入框（隐藏） -->
                <TextBox x:Name="PasswordTextBox"
                       Style="{StaticResource InputTextBox}"
                       Visibility="Collapsed"
                       TextChanged="PasswordTextBox_TextChanged"/>

                <!-- 显示/隐藏密码按钮 -->
                <Button x:Name="ShowPasswordButton"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Width="30" Height="30"
                      Background="Transparent"
                      BorderThickness="0"
                      Content="👁"
                      Foreground="#9CA3AF"
                      FontSize="14"
                      Margin="0,0,10,0"
                      Click="ShowPasswordButton_Click"
                      Cursor="Hand"/>
            </Grid>

            <!-- 新用户提示 -->
            <TextBlock x:Name="NewUserHint"
                     Text="💡 新用户？首次输入密码将自动创建账户"
                     Foreground="#6B7280"
                     FontSize="11"
                     Margin="5,5,0,0"
                     Visibility="Collapsed"
                     TextWrapping="Wrap"/>
        </StackPanel>

        <!-- 记住我 / 忘记密码 -->
        <Grid Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <CheckBox Grid.Column="0"
                      x:Name="RememberMeCheckBox"
                      Content="记住我" 
                      Foreground="White" 
                      IsChecked="True"/>
            <Button x:Name="ForgotPwdBtn" Grid.Column="1" Content="忘记密码？" Click="ForgotPasswordButton_Click"
                    Background="Transparent" BorderThickness="0" Foreground="#9CA3AF"
                    Cursor="Hand" Padding="0" Margin="0,0,0,0"/>
        </Grid>

        <!-- 智能登录/注册按钮 -->
        <Button Grid.Row="10"
                x:Name="LoginButton"
                Content="登录"
                Style="{StaticResource PrimaryButton}"
                Click="LoginButton_Click"/>

        <!-- 分割线 + 其他登录方式（统一放在一个容器内，避免与下方控件重叠） -->
        <StackPanel Grid.Row="12" Margin="0,10,0,0">
            <TextBlock Text="───────────── 或 ─────────────"
                     Foreground="#6B7280"
                     FontSize="11"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,10"/>
            <!-- 并排按钮：验证码登录 与 离线模式 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="OtpLoginButton"
                        Grid.Column="0"
                        Content="使用验证码登录"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,5,0"
                        Click="OtpLoginButton_Click"/>
                <Button x:Name="OfflineModeBtn"
                        Grid.Column="1"
                        Content="离线模式"
                        Style="{StaticResource SecondaryButton}"
                        Margin="5,0,0,0"
                        Click="OfflineModeButton_Click"/>
            </Grid>
        </StackPanel>

        <!-- 加载遮罩 -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="13" Background="#80000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Width="100" Height="10" IsIndeterminate="True" Margin="0,0,0,10"/>
                <TextBlock x:Name="LoadingText" Text="正在登录..." Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

